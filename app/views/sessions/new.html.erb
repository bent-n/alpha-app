<h1 align="center">Log in</h1>
<hr>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path)  do |a| %>
<div class= 'form-group'>
  <div class="control-label col-sm-2">
   <%= a.label :email %>
  </div>
  <div class="col-sm-8">
  <%= a.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true%>
  </div>
</div>
<div class= 'form-group'>
  <div class="control-label col-sm-2">
  <%= a.label :password %>
  </div>
  <div class="col-sm-8">
  <%= a.password_field :password, class: 'form-control', placeholder: "password", autocomplete: "off" %>
  </div>
</div>
<div class= 'form-group'>
  <div class="col-sm-offset-2 col-sm-8">
  <%= a.submit("Log In", class: 'btn btn-primary btn-lg btn-confirm')%>
   <%= link_to "Cancel", root_path, class: 'btn btn-primary btn-lg btn-cancel' %>
  </div>
</div>
<% end %>