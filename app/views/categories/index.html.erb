<hr>
<h1 align="center">Categories</h1>
<hr>
<div align="center">
<%= will_paginate %>
<% @categories.each do |c| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="article-title">
          <%= link_to "#{c.name}", category_path(c), class: 'link' %>
          <% if logged_in? && current_user.admin?%>
          
            <%= link_to 'Edit', edit_category_path(c),class: "btn btn-sm btn-primary btn-confirm" %>
            <%= link_to 'Delete', category_path(c), method: :delete, data: {confirm: 'Really?'}, class: 'btn btn-sm btn-primary btn-delete'  %>
          
        <%end%>
          <p class="small"><%= pluralize(c.articles.count, "Post") %></p>
          <% c.articles.each do |a| %>
          <li class="small"><%= link_to a.title, article_path(a), class: "link" %></li>
          <%end%>
        </li>
      </div>
    </div>
  </ul>
<% end %>
<%= will_paginate %>
</div>