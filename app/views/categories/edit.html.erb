<h1 align="center">Edit Category</h1>
<hr>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"})  do |a| %>
<div class= 'form-group'>
  <div class="control-label col-sm-2">
   <%= a.label :name %>
  </div>
  <div class="col-sm-8">
  <%= a.text_field :name, class: "form-control", placeholder: "Enter Category name", autofocus: true%>
  </div>
</div>
<div class= 'form-group'>
  <div class="col-sm-offset-2 col-sm-8">
  <%= a.submit( "Update Category" , class: 'btn btn-primary btn-md btn-confirm')%>
   <%= link_to "Cancel", root_path, class: 'btn btn-primary btn-md btn-cancel' %>
  </div>
</div>

<% end %>
