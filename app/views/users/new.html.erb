<h1 align= 'center'> Sign Up </h1>
<hr>


<%= render 'shared/errors', obj: @user %>

<div class = 'row'>
  <div class = 'col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"})  do |a| %>
    <div class= 'form-group'>
      <div class="control-label col-sm-2">
       <%= a.label :username %>
      </div>
      <div class="col-sm-8">
      <%= a.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true%>
      </div>
    </div>
    <div class= 'form-group'>
      <div class="control-label col-sm-2">
      <%= a.label :email %>
      </div>
      <div class="col-sm-8">
      <%= a.email_field :email, class: 'form-control', placeholder: "example@address.com" %>
      </div>
    </div>
    <div class= 'form-group'>
      <div class="control-label col-sm-2">
      <%= a.label :password %>
      </div>
      <div class="col-sm-8">
      <%= a.password_field :password ,class: 'form-control', placeholder: "Enter password" %>
      </div>
    </div>
    <div class= 'form-group'>
      <div class="col-sm-offset-2 col-sm-8">
      <%= a.submit "Sign Up", class: 'btn btn-primary btn-lg btn-confirm'%>
       <%= link_to "Cancel", root_path, class: 'btn btn-primary btn-lg btn-cancel' %>
      </div>
    </div>
    <% end %>
  </div>
</div>